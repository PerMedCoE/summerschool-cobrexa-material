\setmainfont{Roboto Slab Light}
\setsansfont[ItalicFont={Roboto Light Italic},%
             BoldFont={Roboto Bold},%
             BoldItalicFont={Roboto Bold Italic}]%
            {Roboto Light}%
\setmonofont{RobotoMonoLight}[
  ItalicFont=RobotoMonoLightItalic,
  BoldFont=RobotoMonoBold,
  BoldItalicFont=RobotoMonoBoldItalic,
  Scale=0.86]
\newfontfamily\condensed{RobotoCondensedLight}[
  ItalicFont=RobotoCondensedLightItalic,
  BoldFont=RobotoCondensedBold,
  BoldItalicFont=RobotoCondensedBoldItalic]

\setbeamerfont{title}{size=\Huge, series=\bfseries, shape=\scshape}
\setbeamerfont{author}{size=\normalsize, shape=\scshape}
