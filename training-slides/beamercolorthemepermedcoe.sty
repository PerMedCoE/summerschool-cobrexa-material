
\RequirePackage{xcolor}

\mode<presentation>

\definecolor{permedcoe blue}{HTML}{001982}
\definecolor{permedcoe blue frame}{HTML}{9c91cd}

\definecolor{permedcoe pink}{HTML}{e0b9bd}
\definecolor{permedcoe pink standalone}{HTML}{d29da3}
\definecolor{permedcoe pink frame}{HTML}{e5c3c6}
\definecolor{permedcoe frame on pink}{HTML}{f2e0e2}

\definecolor{permedcoe light blue background}{HTML}{fafbfd}

\setbeamercolor*{permedcoe base}{fg=permedcoe blue, bg=permedcoe light blue background}

\setbeamercolor*{title page header}{fg=permedcoe blue}
\setbeamercolor*{author}{fg=permedcoe pink standalone}
\setbeamercolor*{date}{parent=title page header}
\setbeamercolor*{normal text}{parent=permedcoe base}
\setbeamercolor*{alerted text}{fg=permedcoe pink standalone}
\setbeamercolor*{example text}{fg=yellow!20!green}
\setbeamercolor*{titlelike}{fg=permedcoe blue}
\setbeamercolor*{subtitle}{fg=permedcoe pink standalone}
\setbeamercolor*{structure}{fg=permedcoe pink standalone, bg=permedcoe blue frame}
\setbeamercolor*{permedcoe side bar}{use=permedcoe base, fg=permedcoe base.bg}
\setbeamercolor*{logo}{use=permedcoe base}
\setbeamercolor*{standout}{use=permedcoe base, fg=white, bg=permedcoe blue}
\setbeamercolor*{section number}{parent=alerted text}
\setbeamercolor*{page line}{fg=permedcoe pink}
\setbeamercolor*{page count}{fg=permedcoe blue frame}
\setbeamercolor*{current page}{fg=permedcoe blue}
\setbeamercolor*{last slide thanks}{use=permedcoe base, fg=permedcoe base.fg}
\setbeamercolor*{last slide title}{parent=title page header}
\setbeamercolor*{last slide author}{parent=author}
\setbeamercolor*{last slide date}{parent=date}

\mode<all>
